@model AplicacionWeb.Models.Departamento

@{
	ViewBag.Title = "Crear Departamento";		
}
<h2>Crear Departamento</h2>		
<br />
<div>
	@using (Html.BeginForm())
	{
		<div class="form-horizontal">
			<div class="form-group">
				<label class="control-label col-md-2">Nombre:</label>
			    <div class="col-md-10">
					@Html.EditorFor(Model => Model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
				</div>
			</div>
			<div class="form-group">
				
				<div class="col-md-offset-2 col-md-10">
					@Html.DropDownListFor(model => Model.Paisid, new SelectList(ViewBag.listapais, "Id", "Nombre"), "--Seleccione el pais--", new { @class = "form-control" } )
				</div>
			</div>
			<p>
			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Crear"  class="btn btn-default" />
				</div>
			</div>
			</p>
		</div>
	}
	<p>
	@Html.ActionLink("Volver al listado", "ConsultarDepartamentos")
	</p>
</div>
	
