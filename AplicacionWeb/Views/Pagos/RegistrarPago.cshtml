@model AplicacionWeb.Models.RegistroPago

@{
	ViewBag.Title = "Registro del Pago";		
}
<h2>Registro del Pago</h2>		
<br />
<div>
	<img height="120" src="https://cdn.thumbr.io/6e27664a239255754e39ee889f444356/KhPZbWboUluRxv8PG87L/https%3A%2F%2Fthumb10.shutterstock.com/thumb_large/875032/759717967/stock-vector-payment-online-dataphone-hand-holding-credit-card-market-759717967.jpg/150/thumb.jpg?rect=0,0,150,150">
	@using (Html.BeginForm())
	{
		<div class="form-horizontal">
			<div class="form-group">
				<label class="control-label col-md-2">idventa:</label>
			    <div class="col-md-10">
					@Html.EditorFor(Model => Model.Ventaid, new { htmlAttributes = new { @class = "form-control" } })
				</div>
			</div>
			<div class="form-group">
				@Html.Label("fecha", htmlAttributes: new { @class = "control-label col-md-2" })
			    <div class="col-md-10">
					@Html.EditorFor(Model => Model.Fecha, new { htmlAttributes = new { @class = "form-control" } })
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-md-2">Valor a pagar:</label>
			    <div class="col-md-10">
					@Html.EditorFor(Model => Model.Valor, new { htmlAttributes = new { @class = "form-control" } })
				</div>
			</div>
			<p>
			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Capturar Datos Datafono"  class="btn btn-default" />
				</div>
			</div>
			</p>
		</div>
	}
</div>
	
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}		

<script type="text/javascript">
$(function () {
    $('#Fecha').datetimepicker({
        format: "DD/MM/YYYY",
        showTodayButton: true,
        defaultDate: new Date()
    }).on('dp.change', function (e) {
        $(this).data('DateTimePicker').hide();
    });
});

</script>
