@model IEnumerable<AplicacionWeb.Models.Producto>

@{
	ViewBag.Title = "Gestionar Productos";		
}
<h2>Gestionar Productos</h2>		
<br />
<div>
	<table class="table">
		<tr>
	  		<th>
	  			<label class="control-label col-md-2">Nombre</label>			
	  		</th>
	  		<th>
	  			<label class="control-label col-md-2">Tipo producto</label>			
	  		</th>
	  		<th>
	  			<label class="control-label col-md-2">Precio</label>			
	  		</th>
	  		<th>
	  			<label class="control-label col-md-2">Imagen</label>			
	  		</th>
	  		<th>
	  			<label class="control-label col-md-2">Sitio Web</label>			
	  		</th>
	  		<th>
	  			<label class="control-label col-md-2">Video</label>			
	  		</th>
	  		<th>
	  			<label class="control-label col-md-2"></label>			
	  		</th>
	  		<th>
	  			<label class="control-label col-md-2"></label>			
	  		</th>
		</tr>
	@foreach (AplicacionWeb.Models.Producto producto in Model) {
		<tr>
	  			<td>
	  				@Html.DisplayFor(model => producto.Nombre)
	  			</td>
	  			<td>
	  				@Html.DisplayFor(model => producto.Tipo_producto.Nombre)
	  			</td>
	  			<td>
	  				@Html.DisplayFor(model => producto.Precio)
	  			</td>
	  			<td>
	  				<img height="120" src="@producto.Fotourl">
	  			</td>
	  			<td>
	  				<a href="@producto.Sitioweb">@producto.Sitioweb</a>
	  			</td>
	  			<td>
	  				<iframe width="200" height="150"  src="@producto.Videourl" frameborder="0" allowfullscreen></iframe>
	  			</td>
	  			<td>
	  				@Html.ActionLink("Editar", "EditarProducto", new { id = producto.Id })
	  			</td>
	  			<td>
	  				@Html.ActionLink("Eliminar", "EliminarProducto", new { id = producto.Id })
	  			</td>
		</tr>
	}
	</table>
	<p>
	@Html.ActionLink("Crear Nuevo Producto", "CrearProducto")
	</p>
</div>
	
