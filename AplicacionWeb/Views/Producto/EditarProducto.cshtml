@model AplicacionWeb.Models.Producto

@{
	ViewBag.Title = "Editar Producto";		
}
<h2>Editar Producto</h2>		
<br />
<div>
	@using (Html.BeginForm())
	{
		<div class="form-horizontal">
			<div class="form-group">
				<label class="control-label col-md-2">Nombre</label>
			    <div class="col-md-10">
					@Html.EditorFor(Model => Model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-md-2">Descripci&#243;n: </label>
			    <div class="col-md-10">
					@Html.EditorFor(Model => Model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-md-2">Precio</label>
			    <div class="col-md-10">
					@Html.EditorFor(Model => Model.Precio, new { htmlAttributes = new { @class = "form-control" } })
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-md-2">Sitio Web</label>
			    <div class="col-md-10">
					@Html.EditorFor(Model => Model.Sitioweb, new { htmlAttributes = new { @class = "form-control" } })
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-md-2">Foto Url</label>
			    <div class="col-md-10">
					@Html.EditorFor(Model => Model.Fotourl, new { htmlAttributes = new { @class = "form-control" } })
				</div>
			</div>
			<div class="form-group">
				<label class="control-label col-md-2">Video Url</label>
			    <div class="col-md-10">
					@Html.EditorFor(Model => Model.Videourl, new { htmlAttributes = new { @class = "form-control" } })
				</div>
			</div>
			<div class="form-group">
				
				<div class="col-md-offset-2 col-md-10">
					@Html.DropDownListFor(model => Model.Tipo_productoid, new SelectList(ViewBag.listatipoproducto, "Id", "Nombre"), "--Seleccione el tipo de producto--", new { @class = "form-control" } )
				</div>
			</div>
			<p>
			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Guardar"  class="btn btn-default" />
				</div>
			</div>
			</p>
		</div>
	}
	<p>
	@Html.ActionLink("Volver al listado", "ConsultarProducto")
	</p>
</div>
	
